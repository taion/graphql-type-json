{
  "name": "graphql-type-json",
  "version": "0.3.2",
  "description": "JSON scalar types for GraphQL.js",
  "files": [
    "lib",
    "es"
  ],
  "main": "lib/index.js",
  "module": "es/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "clean": "rimraf lib es",
    "build": "npm run clean && npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -p . --module commonjs --outDir lib",
    "build:esm": "tsc -p . --module es6 --outDir es",
    "format": "eslint --fix . && npm run prettier -- --write",
    "lint": "eslint . && npm run prettier -- -l",
    "prepublish": "npm run build",
    "prettier": "prettier --ignore-path .eslintignore '**/*.md'",
    "tdd": "jest --watch",
    "test": "npm run lint && npm run testonly -- --coverage",
    "testonly": "jest --runInBand --verbose"
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.{md,ts}": "prettier --write"
  },
  "prettier": {
    "printWidth": 79,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "jest": {
    "preset": "ts-jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/taion/graphql-type-json.git"
  },
  "keywords": [
    "graphql"
  ],
  "author": "Jimmy Jia",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/taion/graphql-type-json/issues"
  },
  "homepage": "https://github.com/taion/graphql-type-json#readme",
  "devDependencies": {
    "codecov": "^3.8.3",
    "eslint": "^8.10.0",
    "eslint-config-4catalyzer": "^1.4.1",
    "eslint-config-4catalyzer-jest": "^2.2.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-prettier": "^4.0.0",
    "graphql": "^15.5.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "typescript": "^4.6.2"
  },
  "peerDependencies": {
    "graphql": ">=0.8.0 < 16"
  }
}
